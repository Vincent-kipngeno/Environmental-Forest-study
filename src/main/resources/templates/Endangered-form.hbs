{{#partial "content"}}
    {{#if editAnimal}}
        <h1>Edit this animal!</h1>
        <form class="form" action="/animals/endangered/{{endangered.id}}" method="post">
            <div class="form-group">
                <label for="name">Edit this endangered animal's name</label>
                <input id="name" name="name" class="form-control" type="text" value="{{endangered.name}}">
            </div>
            <div class="form-group">
                <label for="health">Edit this endangered animal's health:</label>
                <input id="health" name="health" class="form-control" type="text" value="{{endangered.health}}">
            </div>
            <div class="form-group">
                <label for="age">Edit this endangered animal's age:</label>
                <input id="age" name="age" class="form-control" type="text" value="{{endangered.age}}">
            </div>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new endangered animal!</h1>
        <form class="form" action="/animals/endangered" method="post">
            <div class="form-group">
                <label for="name">Enter endangered animal's name</label>
                <input id="name" name="name" class="form-control" type="text" value="{{endangered.name}}">
            </div>
            <div class="form-group">
                <label for="health">Enter endangered animal's health:</label>
                <input id="health" name="health" class="form-control" type="text" value="{{endangered.health}}">
            </div>
            <div class="form-group">
                <label for="age">Enter endangered animal's age:</label>
                <input id="age" name="age" class="form-control" type="text" value="{{endangered.age}}">
            </div>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}