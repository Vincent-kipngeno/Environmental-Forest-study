{{#partial "content"}}
    {{#if editAnimal}}
        <h1>Edit this animal!</h1>
        <form class="form" action="/animals/{{editAnimal.id}}" method="post">
            <div class="form-group">
                <label for="name">Edit this animal's name</label>
                <input id="name" name="name" class="form-control" type="text" value="{{editAnimal.name}}">
            </div>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new animal!</h1>
        <form class="form" action="/animals" method="post">
            <div class="form-group">
                <label for="name">Enter animal's name</label>
                <input id="name" name="name" class="form-control" type="text" value="">
            </div>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}