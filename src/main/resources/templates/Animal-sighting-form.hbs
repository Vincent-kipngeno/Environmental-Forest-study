{{#partial "content"}}
    {{#if editSighting}}
        <div style="color:purple; text-align: center;">
            <h1>Edit this Sighting!</h1>
        </div>
        <form class="form" action="/animals/sightings/{{sighting.id}}" method="post">
            <div class="form-group">
                <label for="rangerName">Edit ranger's name:</label>
                <input id="rangerName" name="rangerName" class="form-control" type="text" value="{{editSighting.rangerName}}">
            </div>
            <div class="form-group">
                <label for="location">Edit location:</label>
                <input id="location" name="location" class="form-control" type="number" value="{{editSighting.location}}">
            </div>
            <div class="form-group">
                <label for="animalId">Update this sighting's animal:</label>
                <select id="animalId" name="animalId" class="form-control">
                    {{#each animals}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right animal?<a href="/animals/new">Add a new one first.</a></p>
            </div>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <div style="color:purple; text-align:center;">
            <h2>Add a new Sighting!</h2>
        </div>
        <form class="form" action="/animals/sightings" method="post">
            {{#if animals}}
                <div class="form-group">
                    <label for="rangerName">Enter ranger's name:</label>
                    <input id="rangerName" name="rangerName" class="form-control" type="text" value="">
                </div>
                <div class="form-group">
                    <label for="location">Enter location:</label>
                    <input id="location" name="location" class="form-control" type="number" value="">
                </div>
                <div class="form-group">
                    <label for="animalId">Enter animal:</label>
                    <select id="animalId" name="animalId" class="form-control">
                        {{#each animals}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                    <p>Don't see the right animal?<a href="/animals/new">Add a new one first.</a></p>
                </div>
            {{else}}
                <h3> You'll need to add an endangered animal before you add a sighting. <a href="/animals/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}